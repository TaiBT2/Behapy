@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="login-form">
                    <h4 class="login-title">Đăng ký</h4>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 col-12">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" placeholder="Họ tên" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" placeholder="Địa chỉ email" class="form-control" autocomplete="email" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12">
                            <label asp-for="Input.Address"></label>
                            <input asp-for="Input.Address" placeholder="Địa chỉ" class="form-control" aria-required="true" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" type="password" placeholder="Mật khẩu" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Xác nhận mật khẩu" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">
                                Đăng ký
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}