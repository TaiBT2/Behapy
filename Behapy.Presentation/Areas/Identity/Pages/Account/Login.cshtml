@page
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}

<div class="login-register-area section-space-y-axis-100">
  <div class="container">
    <div class="row">
      <form method="post">
        <div class="login-form">
          <h4 class="login-title">Đăng nhập</h4>

          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="row">
            <div class="col-lg-12">
              <label asp-for="Input.Email" class="form-label"></label>
              <input asp-for="Input.Email" class="form-control" type="email" placeholder="Email Address" autocomplete="username" aria-required="true"/>
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-lg-12">
              <label asp-for="Input.Password" class="form-label"></label>
              <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" autocomplete="current-password" aria-required="true"/>
              <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-8">
              <div class="check-box">
                <input asp-for="Input.RememberMe" class="form-check-input"/>
                <label asp-for="Input.RememberMe" class="form-label">
                  @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
              </div>
            </div>
            <div class="col-md-4 pt-1 mt-md-0">
              <div class="forgotton-password_info">
                <a asp-page="./ForgotPassword">Quên mật khẩu?</a>
              </div>
            </div>
            <div class="col-lg-12 pt-5">
              <button type="submit" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">
                Đăng nhập
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}