<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>@ViewData["Title"] - Behapy</title>
	<meta name="robots" content="noindex, follow" />
	<meta name="description" content="" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />

	<!-- Core css -->
	<link rel="stylesheet" href="~/css/admin/app.min.css" />

	<link rel="stylesheet" href="~/css/site.css" />

	<!--Css Qill-->
	<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

	<!-- JS  Qill-->
	<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<div class="app">
		<div class="layout">
			<partial name="Admin/_HeaderNavBar" />

			<!-- Page Container START -->
			<div class="page-container">
				<!-- Content Wrapper START -->
				@RenderBody()
				<!-- Content Wrapper END -->

				<partial name="Admin/_Footer" />

			</div>

			<partial name="Admin/_SideNav" />

			<a class="scroll-to-top" href="">
				<i class="fa fa-chevron-up"></i>
			</a>
		</div>
	</div>

	<!-- Core Vendors JS -->
	<script src="~/js/admin/vendors.min.js"></script>

	<!-- page js -->
	<script src="~/js/admin/vendors/chartjs/Chart.min.js"></script>

	<!-- Core JS -->
	<script src="~/js/admin/app.min.js"></script>

	<script src="~/js/site.js"></script>
	
	<script>
	var themeColors = {
      magenta: '#eb2f96',
      magentaLight: 'rgba(235, 47, 150, 0.05)',
      red: '#de4436',
      redLight: 'rgba(222, 68, 54, 0.05)',
      volcano: '#fa541c',
      volcanoLight: 'rgba(250, 84, 28, 0.05)',
      orange: '#fa8c16',
      orangeLight: 'rgba(250, 140, 22, 0.1)',
      gold: '#ffc107',
      goldLight: 'rgba(255, 193, 7, 0.1)',
      lime: '#a0d911',
      limeLight: 'rgba(160, 217, 17, 0.1)',
      green: '#52c41a',
      greenLight: 'rgba(82, 196, 26, 0.1)',
      cyan: "#05c9a7",
      cyanLight: 'rgba(0, 201, 167, 0.1)',
      blue: '#3f87f5',
      blueLight: 'rgba(63, 135, 245, 0.15)',
      geekBlue: '#2f54eb',
      geekBlueLight: 'rgba(47, 84, 235, 0.1)',
      purple: '#886cff',
      purpleLight: 'rgba(136, 108, 255, 0.1)',
      gray: '#53535f',
      grayLight: '#77838f',
      grayLighter: '#ededed',
      grayLightest: '#f1f2f3',
      border: '#edf2f9',
      white: '#ffffff',
      dark: '#2a2a2a',
      transparent: 'rgba(255, 255, 255, 0)'
  }
	</script>
	
	@await Component.InvokeAsync("Notyf")
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
