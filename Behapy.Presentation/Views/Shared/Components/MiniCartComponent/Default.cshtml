@model List<Behapy.Presentation.Models.CartItem>?

<div class="offcanvas-minicart_wrapper" id="miniCart">
  <div class="harmic-offcanvas-body">

    @if (Model != null)
    {
      <div class="minicart-content">
        <div class="minicart-heading">
          <h4 class="mb-0">Giỏ hàng</h4>
          <a href="#" class="button-close">
            <i class="pe-7s-close"></i>
          </a>
        </div>

        <ul class="minicart-list">
          @foreach (var item in Model)
          {
            <li class="minicart-product">
              <a class="product-item_remove" href="#">
                <i class="pe-7s-close"></i>
              </a>
              <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.Id" class="product-item_img">
                <img class="img-full" src="@item.Product.ImageUrl" alt="@item.Product.Name"/>
              </a>
              <div class="product-item_content">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.Id" class="product-item_title">@item.Product.Name</a>
                <span class="product-item_quantity">@item.Amount x @item.Product.Price</span>
              </div>
            </li>
          }
        </ul>
      </div>

      <div class="minicart-item_total">
        <span>Subtotal</span>
        <span class="ammount">$240.00</span>
      </div>

      <div class="group-btn_wrap d-grid gap-2">
        <a href="cart.html" class="btn btn-secondary btn-primary-hover">View Cart</a>
        <a href="checkout.html"
           class="btn btn-secondary btn-primary-hover">
          Checkout
        </a>
      </div>
    }
    else
    {
      <div>
        Để xem được Giỏ hàng, bạn cần
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
      </div>
    }
  </div>
</div>