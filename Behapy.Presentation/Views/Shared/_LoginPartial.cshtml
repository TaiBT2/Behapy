@using Microsoft.AspNetCore.Identity
@using Behapy.Presentation.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
  var userFullName = (await UserManager.GetUserAsync(User)).FullName;
  
  <li>
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
      Xin chào @userFullName
    </a>
  </li>
  <li>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
      <button type="submit" class="dropdown-item" style="font-size: 14px">Đăng xuất</button>
    </form>
  </li>
}
else
{
  <li>
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
  </li>
  <li>
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
  </li>
}