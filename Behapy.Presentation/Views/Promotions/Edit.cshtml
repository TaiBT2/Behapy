@model Behapy.Presentation.Models.Promotion

@{
  ViewData["Title"] = "Edit";
  Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <a class="breadcrumb-item" asp-controller="Promotions" asp-action="Index">Khuyến mãi</a>
                <span class="breadcrumb-item active">Sửa khuyến mãi</span>
            </nav>
        </div>
    </div>

<div class="row">
  <div class="col-md-10">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id"/>
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        <input asp-for="Value" class="form-control"/>
        <span asp-validation-for="Value" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Unit" class="control-label"></label>
        <select asp-for="Unit" class="form-control" asp-items="ViewBag.Unit"></select>
        <span asp-validation-for="Unit" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Voucher" class="control-label"></label>
        <input asp-for="Voucher" class="form-control"/>
        <span asp-validation-for="Voucher" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="MaxDiscount" class="control-label"></label>
        <input asp-for="MaxDiscount" class="form-control"/>
        <span asp-validation-for="MaxDiscount" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="MinOrderValue" class="control-label"></label>
        <input asp-for="MinOrderValue" class="form-control"/>
        <span asp-validation-for="MinOrderValue" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="EndAt" class="control-label"></label>
        <input asp-for="EndAt" class="form-control"/>
        <span asp-validation-for="EndAt" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="StartAt" class="control-label"></label>
        <input asp-for="StartAt" class="form-control"/>
        <span asp-validation-for="StartAt" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"></select>
        <span asp-validation-for="Type" class="text-danger" ></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary"/>
      </div>
    </form>
  </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
  <script src="https://unpkg.com/imask"></script>
  
  <script>
    const numberMask = {
      mask: Number,
      scale: 2,
      thousandsSeparator: ',',
      radix: '.',
    }
  
    IMask(document.getElementById('Value'), numberMask);
    IMask(document.getElementById('MaxDiscount'), numberMask);
    IMask(document.getElementById('MinOrderValue'), numberMask);
  </script>
}