@model List<Behapy.Presentation.Models.Product>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
  <!-- Breadcrumb -->
  <div class="breadcrumb-area breadcrumb-height"
       data-bg-image="/images/shop/layout/layout.jpg">
    @*<div class="container h-100">
      <div class="row h-100">
        <div class="col-lg-12">
          <div class="breadcrumb-item">
            <h2 class="breadcrumb-heading">Shop Layout</h2>
            <ul>
              <li>
                <a href="/">
                  Home <i class="pe-7s-angle-right"></i>
                </a>
              </li>
              <li>Shop Pages</li>
            </ul>
          </div>
        </div>
      </div>
    </div>*@
  </div>

  <div class="shop-area section-space-y-axis-100">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <!-- Top bar -->
          <div class="product-topbar">
            <ul>
              <li class="product-view-wrap">
                <ul class="nav" role="tablist">
                  <li class="grid-view" role="presentation">
                    <a class="active"
                       id="grid-view-tab"
                       data-bs-toggle="tab"
                       href="#grid-view"
                       role="tab"
                       aria-selected="true">
                      <i class="fa fa-th"></i>
                    </a>
                  </li>
                  <li class="list-view" role="presentation">
                    <a id="list-view-tab"
                       data-bs-toggle="tab"
                       href="#list-view"
                       role="tab"
                       aria-selected="true">
                      <i class="fa fa-th-list"></i>
                    </a>
                  </li>
                </ul>
              </li>
              <li class="page-count">
                <span>23</span> Product Found of <span>50</span>
              </li>
              <li class="short">
                <select class="nice-select wide rounded-0">
                  <option value="1">Sort by Default</option>
                  <option value="2">Sort by Popularity</option>
                  <option value="3">Sort by Rated</option>
                  <option value="4">Sort by Latest</option>
                  <option value="5">Sort by High Price</option>
                  <option value="6">Sort by Low Price</option>
                </select>
              </li>
            </ul>
          </div>

          <!-- Content -->
          <div class="tab-content text-charcoal pt-8">
            <!-- Short list-->
            <div class="tab-pane fade show active"
                 id="grid-view"
                 role="tabpanel"
                 aria-labelledby="grid-view-tab">
              <div class="product-grid-view row">

                @for (var i = 0; i < Model.Count; i++)
                {
                  var item = Model[i];
                  var pt6 = i != 0 ? "pt-6" : "";
                  var ptsm0 = i == 1 ? "pt-sm-0" : "";
                  var ptlg0 = i is 2 or 3 ? "pt-lg-0" : "";

                  <div class="col-lg-3 col-sm-6 @pt6 @ptsm0 @ptlg0">
                    <div class="product-item"> 
                      <div class="product-img img-zoom-effect">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                          <img class="img-full" src="@item.ImageUrl" alt="@item.Name" />
                        </a>
                        <div class="product-add-action">
                          <ul>
                            <li>
                              <a onclick="addToCart(@item.Id)" role="button">
                                <i class="pe-7s-cart"></i>
                              </a>
                            </li>
                            <li>
                              <a href="wishlist.html" role="button">
                                <i class="pe-7s-like"></i>
                              </a>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="product-content">
                        <a class="product-name" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                        <div class="price-box pb-1">
                          <span class="new-price">@item.Price</span>
                        </div>
                        @*<div class="rating-box">
                          <ul>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                          </ul>
                        </div>*@
                      </div>
                    </div>
                  </div>
                }
              </div>
            </div>

            <!-- Long list -->
            <div class="tab-pane fade"
                 id="list-view"
                 role="tabpanel"
                 aria-labelledby="list-view-tab">
              <div class="product-list-view row">

                @for (var i = 0; i < Model.Count; i++)
                {
                  var item = Model[i];
                  var pt6 = i != 0 ? "pt-6" : "";

                  <div class="col-12 @pt6">
                    <div class="product-item">
                      <div class="product-img img-zoom-effect">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                          <img class="img-full" src="@item.ImageUrl" alt="@item.Name" />
                        </a>
                        <div class="product-add-action">
                          <ul>
                            <li>
                              <a onclick="addToCart(@item.Id)" role="button">
                                <i class="pe-7s-cart"></i>
                              </a>
                            </li>
                            <li>
                              <a href="wishlist.html" role="button">
                                <i class="pe-7s-like"></i>
                              </a>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="product-content align-self-center">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="product-name pb-2">
                          @item.Name
                        </a>
                        <div class="price-box pb-1">
                          <span class="new-price">@item.Price</span>
                        </div>
                        @*<div class="rating-box pb-2">
                          <ul>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                            <li><i class="pe-7s-star"></i></li>
                          </ul>
                        </div>*@
                        <p class="short-desc mb-0">
                          @item.Description
                        </p>
                      </div>
                    </div>
                  </div>
                }
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <div class="pagination-area pt-10">
            <nav aria-label="Page navigation example">
              <ul class="pagination justify-content-center">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span class="fa fa-chevron-left"></span>
                  </a>
                </li>
                <li class="page-item active">
                  <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span class="fa fa-chevron-right"></span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
          <!-- Pagination end -->

        </div>
      </div>
    </div>
  </div>
</main>

@section Scripts {
  <script src="~/js/shop/cart.js"></script>
}
